<div class="container" >
  <div class="row justify-content-center">
      <table class="table table-hover bg-light" style="text-align: center">
        <thead>
          <tr class="table-primary">
            <th colspan="3" scope="col">Movies List</th>
          </tr>
          <tr class="table-primary">
            <th scope="col"><%= sort_link "title" %></th>
            <th scope="col"><%= sort_link "release_year" %></th>
            <th scope="col"><%= sort_link "avg_rating" %></th>
          </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td><%= link_to movie.title, movie_path(movie) %></td>
              <td><%= movie.release_year %></td>
              <td><%= star_rating(movie.avg_rating).html_safe %></td>
            </tr>
          <% end %>
          <% if logged_in? then %>
            <tr class="table-light">
              <td colspan="3"><%= button_to "Add New Movie", new_movie_path, method: :get, class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div><!-- end row -->
</div><!-- end container -->
