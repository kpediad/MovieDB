<div class="container" >
  <div class="row justify-content-center">
      <table class="table table-hover bg-light" style="text-align: center">
        <thead>
          <tr class="table-primary">
            <th colspan="2" scope="col"><%= link_to @movie.title, movie_path(@movie) %></th>
          </tr>
          <tr >
            <th scope="col">Release Year: <%= @movie.release_year %></th>
            <th scope="col">Average Rating: <%= star_rating(@movie.avg_rating).html_safe %></th>
          </tr>
          <tr>
            <td colspan="2"><%= @movie.synopsis %></td>
          </tr>
        </thead>
        <tbody>
          <%= form_for [@movie, @review] do |f| %>
            <%= f.hidden_field :user_id, value: "#{current_user.id}" %>
            <tr class="table-primary">
              <th colspan="2" scope="col">Edit Review</th>
            </tr>
            <tr>
              <th scope="col"><%= f.label :content, class: "col-form-label col-form-label-sm" %><%= f.text_area :content, class: "form-control" %></th>
              <th scope="col"><%= f.label :rating, class: "col-form-label col-form-label-sm" %><%= f.select :rating, Review::RATINGS.collect{|r| ["#{r} " + "Star".pluralize(r), r]}, {prompt: 'Select Star Rating'}, class: "form-control" %></th>
            </tr>
            <tr class="table-light">
              <td colspan="2"><%= f.submit "Edit Review", class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div><!-- end row -->
</div><!-- end container -->
