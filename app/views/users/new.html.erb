<div class="login">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>

    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :email %>
      <%= f.text_field :email %><br><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %><br><br>
      <%= f.submit "Sign Up" %>
    <%end%>

    </div>
  </div>
</div>
